<%= form_tag({controller:"post", action:"create_comment"}, method: "post") do %>
    <%= hidden_field_tag(:id, @post.id)%>
    <%= label_tag(:content, "댓글 : ") %>
    <%= text_field_tag(:content) %>
    <br/>
    <%= submit_tag("댓글작성") %>
<% end %>

<% @post.comments.each do |c| %>
    <p><%= c.content %></p>
<% end %>